<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E4F2F4"
            android:gravity="center"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:gravity="center"
                android:background="@color/light_blue"
                android:textColor="#FDFDFD"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Cập nhật thông tin" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/editTextStaffNameUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    android:inputType="text"
                    android:hint="Họ tên"
                    />
                <EditText
                    android:id="@+id/editTextCMTUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    android:inputType="number"
                    android:hint="CMT"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:id="@id/textNS"
                        android:textColor="#686678"
                        android:textSize="19sp"
                        android:paddingLeft="5dp"
                        android:text="Ngày sinh:"
                        android:layout_alignParentStart="true"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                    <EditText
                        android:id="@+id/editTextNgaySinhUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/textNS"
                        android:ems="10"
                        android:hint="Chọn ngày"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="false"
                        android:padding="10dp"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/textNS" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/editTextDiaChiUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:padding="10dp"

                    android:layout_marginBottom="10dp"
                    android:inputType="text"
                    android:hint="Địa chỉ"
                    />


            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="20dp"
                android:paddingHorizontal="20dp"
                android:layout_alignParentBottom="true"
                tools:ignore="ObsoleteLayoutParam">
                <Button
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_change_password"
                    android:textColor="#F4EDED"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:id="@+id/btnSubmitUpdateUser"
                    android:text="Xác nhận"
                    tools:ignore="RtlHardcoded" />
                <Button
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_cancel3"
                    android:textColor="#F4EDED"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:id="@+id/btnCancelUpdateUser"
                    android:text="Hủy bỏ"
                    tools:ignore="RtlHardcoded" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


    <!--    </LinearLayout>-->
</LinearLayout>