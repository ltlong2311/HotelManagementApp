<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E4F2F4"
            android:gravity="center"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:gravity="center"
                android:background="@color/light_blue"
                android:textColor="#FDFDFD"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Check in" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextSoPhongCheckIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="false"
                    android:hint="Số phòng"
                    android:text=""
                    />
                <EditText
                    android:id="@+id/editTextTenKhachCheckIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="text"
                    android:layout_marginBottom="20dp"
                    android:text=""
                    android:hint="Họ tên"
                    />
                <EditText
                    android:id="@+id/editTextCMTCheckIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="number"
                    android:layout_marginBottom="20dp"
                    android:text=""
                    android:hint="CMND"
                    />
                <EditText
                    android:id="@+id/editTextDiaChiCheckIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="text"
                    android:layout_marginBottom="20dp"
                    android:hint="Địa chỉ"
                    />
                <EditText
                    android:id="@+id/editTextSDTCheckIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="number"
                    android:layout_marginBottom="10dp"
                    android:text=""
                    android:hint="Số điện thoại"
                    android:textColor="#D80C0C"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/optionLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:theme="@style/TextLabel">
                    <AutoCompleteTextView
                        android:id="@+id/optionsCheckInMenu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="none"
                        android:text="Theo ngày"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_alignParentBottom="true">
                <Button
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_confirm"
                    android:textColor="#F4EDED"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:id="@+id/btn_submit_checkIn"
                    android:text="Xác nhận" />
                <Button
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_cancel2"
                    android:textColor="#F4EDED"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:id="@+id/btn_cancel_checkIn"
                    android:text="Hủy bỏ" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


    <!--    </LinearLayout>-->
</LinearLayout>